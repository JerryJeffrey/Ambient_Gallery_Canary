<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_sensitivity_main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarThumbHorizontal="@color/transparent">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/settings_sensitivity_main_tab_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/highlight_color"
        app:tabSelectedTextColor="@color/main_color"
        app:tabTextColor="@color/sub_color">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/settings_sensitivity_main_tab_pulldown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pull down refresh" />

    </com.google.android.material.tabs.TabLayout>

    <ScrollView
        android:id="@+id/settings_sensitivity_main_scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/settings_sensitivity_main_scroll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>
</LinearLayout>